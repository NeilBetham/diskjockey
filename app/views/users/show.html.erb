<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">

    <div class="col-md-2">
      <p class="text-right"><strong>Name:</strong></p>
    </div>

    <div class="col-md-10">
      <p><%= @user.name %></p>
    </div>

  </div>

  <div class="row">

    <div class="col-md-2">
      <p class="text-right"><strong>Email:</strong></p>
    </div>

    <div class="col-md-10">
      <p><%= @user.email %></p>
    </div>

  </div>

  <div class="row">

    <div class="col-md-2">
      <p class="text-right"><strong>Phone:</strong></p>
    </div>

    <div class="col-md-10">
      <p><%= @user.phone %></p>
    </div>

  </div>

  <div class="row">

    <div class="col-md-2">
      <p class="text-right"><strong>Phone carrier:</strong></p>
    </div>

    <div class="col-md-10">
      <p><%= @user.phone_carrier %></p>
    </div>

  </div>

  <div class="row">

    <div class="col-md-2">
      <p class="text-right"><strong>Relevant experience:</strong></p>
    </div>

    <div class="col-md-10">
      <p><%= @user.relevant_experience %></p>
    </div>

  </div>

  <div class="row">

    <div class="col-md-2">
      <p class="text-right"><strong>Role:</strong></p>
    </div>

    <div class="col-md-10">
      <p><%= @user.role.upcase %></p>
    </div>

  </div>

  <div class="row">

    <div class="col-md-2">
      <p class="text-right"><strong>Status:</strong></p>
    </div>

    <div class="col-md-10">
      <p><%= @user.employment_status.capitalize %></p>
    </div>

  </div>

  <div class="row">

    <div class="col-md-2">
      <p class="text-right"><strong>Station staff:</strong></p>
    </div>

    <div class="col-md-10">
      <p><%= @user.station_staff.humanize %></p>
    </div>

  </div>

</div>

<div class="form-actions">
  <%= link_to users_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-chevron-left"></span> Back
  <% end %>
  <%= link_to edit_user_path(@user), class: 'btn btn-info' do %>
    <span class="glyphicon glyphicon-pencil"></span> Edit
  <% end %>
</div>
