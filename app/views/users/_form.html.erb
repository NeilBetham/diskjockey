<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.telephone_field :phone %>
  </div>
  <div class="field">
    <%= f.label :phone_carrier %><br>
    <%= f.text_field :phone_carrier %>
  </div>
  <div class="field">
      <%= f.label :relevant_experience %><br>
      <%= f.text_area :relevant_experience %>
  </div>
  <div class="field">
      <%= f.label :employment_status %><br>
      <%= f.select :employment_status, User::STATUSES.map(&:capitalize) %>
  </div>
  <div class="field">
      <%= f.label :station_staff %><br>
      <%= f.label :station_staff, "Yes" %>
      <%= f.radio_button :station_staff, true, value: true %>
      <%= f.label :station_staff, "No" %>
      <%= f.radio_button :station_staff, false, value: false %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
