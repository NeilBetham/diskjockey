<h1>Listing Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Role</th>
      <th>Status</th>
      <th>Station Staff</th>
      <th colspan="3">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.role.upcase %></td>
        <td><%= user.employment_status.capitalize %></td>
        <td><%= user.station_staff.humanize %></td>
        <td>
          <%= link_to user, class: 'btn btn-primary btn-xs' do %>
            <span class="glyphicon glyphicon-user"></span> Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_path(user), class: 'btn btn-info btn-xs' do %>
            <span class="glyphicon glyphicon-pencil"></span> Edit
          <% end %>
        </td>
        <td>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
            <span class="glyphicon glyphicon-remove"></span> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_user_path, class: 'btn btn-success' do %>
  <span class="glyphicon glyphicon-plus"></span> New User
<% end %>
